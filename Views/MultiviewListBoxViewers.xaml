						Margin="10 -10 0 0"
						Template="{StaticResource HorizontalGradientTemplateGreen}"
						Width="145"
						Height="50"/>

					<Button x:Name="UpdateCustomer"
						Background="{StaticResource HeaderBorderBrushGreen}"	
						Click="UpdateCustomer_Click"
						Content="Update Customer Db"
						FontWeight="Normal"
						FontSize="14"
						Foreground="White"
						Margin="10 -10 0 0"
						Template="{StaticResource HorizontalGradientTemplateGreen}"
						Width="145"
						Height="50"/>

					<Button x:Name="CloseBtn"
						Content="Close Window"
						FontSize="18"
						FontWeight="DemiBold"
						Grid.RowSpan="2"
						Height="50"
						HorizontalAlignment="Right"
						Margin="10,-5,0,0"
